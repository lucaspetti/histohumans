<%= render 'components/navbar' %>
<div class="container text-center">
  <h2><%= @person.first_name %> <%= @person.last_name %></h2>
  <img src="" alt="" class="person-photo" data-url=<%= @person.photo %> >
  <h4><%= @person.birthdate %> - <%= @person.death || "present" %></h4>
  <img src="" alt="flag" class="country-flag" data-url=<%= @person.country.flag %> >
  <p><%= @person.bio %></p>
  <%= link_to "", "https://en.wikipedia.org/wiki/#{@person.first_name}_#{@person.last_name}",
              class: 'fab fa-wikipedia-w' %>
  <%= render 'components/index-link' %>
</div>

<script>
  const img = document.querySelector('.person-image');
  const flag = document.querySelector('.country-flag');

  img.src = img.dataset.url;
  flag.src = flag.dataset.url;
</script>
