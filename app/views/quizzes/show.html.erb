<div class="container text-center">
  <h2><%= @quiz.name %></h2>
  <div class="quiz-container">
    <% @quiz.questions.each do |question| %>
      <%= question.content %>
      <% question.options.each do |option| %>
          <li>
            <%= link_to option.text, "#",
                class: 'btn btn-histohumans quiz-option',
                "data-attribute": "#{option.correct}" %>
          </li>
      <% end %>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag 'quiz-options' %>
